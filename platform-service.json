[
    {
      "type": 1,
      "title": "Platform",
      "name": "Platform",
      "image": "iqgeoproddev.azurecr.io/releases/platform-appserver:latest",
      "categories": [
        "System Tools"
      ],
      "platform": "linux",
      "restart_policy": "unless-stopped",
      "ports": [
        "80:8080/tcp"
      ],
      "volumes": [
        {
          "container": "${PATCH_NUMBER}_extracts",
          "bind": "/opt/iqgeo/data/extracts"
        },
        {
          "container": "${PATCH_NUMBER}_sync",
          "bind": "/opt/iqgeo/data/sync"
        }        
      ],
      "env": [
        {
          "name": "ALLOW_HTTP",
          "default": "YES",
          "description": "",
          "label": ""                    
        },
        {
          "name": "WSGI_PROCESSES",
          "default": "2",
          "description": "",
          "label": ""       
        },
        {
          "name": "WSGI_THREADS",
          "default": "4",
          "description": "",
          "label": "" 
        },
        {
          "name": "PGHOST",
          "default": "postgis13",
          "description": "",
          "label": "" 
        },
        {
          "name": "PGPORT",
          "default": "5432",
          "description": "",
          "label": "" 
        },
        {
          "name": "PGUSER",
          "default": "iqgeo",
          "description": "",
          "label": "" 
        }, 
        {
          "name": "PGPASSWORD",
          "default": "iqgeo",
          "description": "",
          "label": "" 
        },  
        {
          "name": "MYW_DB_NAME",
          "default": "${PATCH_NUMBER}-db",
          "description": "",
          "label": "" 
        },                                         
        {
          "name": "MYW_DB_HOST",
          "default": "${PATCH_NUMBER}-db",
          "description": "",
          "label": "" 
        }, 
        {
          "name": "MYW_DB_PORT",
          "default": "5432",
          "description": "",
          "label": "" 
        },     
        {
          "name": "MYW_DB_USERNAME",
          "default": "iqgeo",
          "description": "",
          "label": "" 
        },  
        {
          "name": "MYW_DB_PASSWORD",
          "default": "iqgeo",
          "description": "",
          "label": "" 
        },   
        {
          "name": "IQGEO_HOST",
          "default": "${PATCH_NUMBER}.${HOST_DOMAIN}",
          "description": "",
          "label": "" 
        },  
        {
          "name": "MYW_EXT_BASE_URL",
          "default": "http://${PATCH_NUMBER}.${HOST_DOMAIN}",
          "description": "",
          "label": "" 
        }                
      ]
    }
] 